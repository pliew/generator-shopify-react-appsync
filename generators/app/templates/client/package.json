{
  "name": "<%= appname %>",
  "version": "1.0.0",
  "description": "<%= appname %> (built using Shopify React AppSync Yeoman generator)",
  "main": "dist/index.js",
  "repository": "git@github.com:buggy/project-x-client.git",
  "author": "Rich Buggy <rich@buggy.id.au>",
  "license": "MIT",
  "scripts": {
    "build": "webpack --config ./webpack/prod.config.js --define process.env.NODE_ENV='production'",
    "clean": "rm -rf coverage/* dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "prebuild": "yarn run clean && yarn run lint && yarn run test",
    "schema": "apollo-codegen generate src/graphql/*.graphql --schema schema.json --output src/schema.ts --target typescript",
    "start": "webpack-dev-server --config ./webpack/dev.config.js --open -d",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@shopify/polaris": "2.8.0",
    "apollo-client": "2.4.1",
    "aws-amplify": "1.0.8",
    "aws-appsync": "1.3.4",
    "aws-appsync-react": "1.1.4",
    "babel-polyfill": "^6.26.0",
    "graphql": "0.13.2",
    "graphql-tag": "^2.9.2",
    "raf": "^3.4.0",
    "react": "16.5.0",
    "react-apollo": "2.1.11",
    "react-dom": "16.5.0",
    "react-router-dom": "^4.3.1",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "@types/enzyme": "3.1.13",
    "@types/jest": "23.3.1",
    "@types/react": "16.4.13",
    "@types/react-dom": "16.0.7",
    "@types/react-router-dom": "^4.3.0",
    "@types/react-test-renderer": "16.0.2",
    "apollo-codegen": "^0.20.2",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "enzyme": "3.6.0",
    "enzyme-adapter-react-16": "1.5.0",
    "favicons-webpack-plugin": "^0.0.9",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "23.5.0",
    "mini-css-extract-plugin": "0.4.2",
    "node-sass": "4.9.3",
    "sass-loader": "7.1.0",
    "source-map-loader": "0.2.4",
    "style-loader": "0.23.0",
    "ts-jest": "23.1.4",
    "ts-loader": "5.0.0",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "3.0.3",
    "typings-for-css-modules-loader": "^1.7.0",
    "webpack": "4.17.2",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "3.1.8",
    "webpack-merge": "4.1.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/jest/enzyme.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(css|sass|scss|less)$": "identity-obj-proxy"
    }
  }
}
